#!/bin/sh
#########

export HISTFILESIZE=1000000
export PROMPT_COMMAND='history -a'
export JAVA_HOME="$(dirname $(dirname $(realpath $(which javac))))"
export VIRTUAL_ENV_DISABLE_PROMPT=1

if [[ -f "$HOME/.bash_utils" ]]; then
    . "$HOME/.bash_utils"
fi
# Rust
if [[ -f "$HOME/.cargo/env" ]]; then
    . "$HOME/.cargo/env"
fi
if [[ -f "/etc/bazel-complete.bash" ]]; then
    . /etc/bazel-complete.bash
fi

# Go
export PATH=$PATH:/usr/local/go/bin
export PATH=$PATH:$HOME/go/bin/

if [[ -f "$HOME/Code/python/venvs/default/bin/activate" ]]; then
    . $HOME/Code/python/venvs/default/bin/activate
fi

export RT="$HOME/Code/rust/rustdocker"
export PATH="$PATH:$HOME/.local/bin/"


if [[ -f "$HOME/.bash_theme" ]]; then
    . "$HOME/.bash_theme"
fi